generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- ENUMS ---
enum Role {
  USER
  ADMIN
  ASSOCIATION
}

enum Category {
  VETEMENTS
  SANTE
  LOGEMENT
  ALIMENTATION
  LOGISTIQUE
  AUTRE
}

enum NeedStatus {
  EN_ATTENTE
  EN_COURS
  RESOLU
}

enum OfferStatus {
  DISPONIBLE
  RESERVE
  DISTRIBUE
}

enum PersonStatus {
  DISPARU
  EN_SECURITE
  RETROUVE
}

// --- MODELS ---

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  passwordHash String
  fullName     String
  phone        String?
  role         Role     @default(USER)
  avatarUrl    String?
  createdAt    DateTime @default(now())

  // Relations existantes
  needs          Need[]
  offers         Offer[]
  reportedPeople PersonAlert[]

  // --- NOUVELLES RELATIONS (9asrawa) ---
  posts    Post[]
  comments Comment[]
  likes    Like[]
}

model Need {
  id           String     @id @default(uuid())
  title        String
  description  String
  category     Category
  urgency      Int
  status       NeedStatus @default(EN_ATTENTE)
  
  locationName String
  lat          Float?
  lng          Float?
  imageUrl     String?
  
  // Contact (Anonyme ou Inscrit)
  contactName  String?
  contactPhone String?
  
  createdAt    DateTime   @default(now())
  
  // Relation User optionnelle
  userId       String?
  user         User?      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Offer {
  id           String      @id @default(uuid())
  title        String
  description  String
  category     Category
  quantity     String?
  status       OfferStatus @default(DISPONIBLE)
  
  locationName String
  lat          Float?
  lng          Float?
  imageUrl     String?
  
  // Contact (Anonyme ou Inscrit)
  contactName  String?
  contactPhone String?
  
  createdAt    DateTime    @default(now())
  
  // Relation User optionnelle
  userId       String?
  user         User?       @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model PersonAlert {
  id               String       @id @default(uuid())
  fullName         String
  age              Int?
  status           PersonStatus
  lastSeenLocation String?
  description      String?
  imageUrl         String?
  contactPhone     String
  createdAt        DateTime     @default(now())
  
  // Celui qui a signalé
  reporterId       String
  reporter         User         @relation(fields: [reporterId], references: [id])
}

// --- ESPACE COMMUNAUTAIRE (9asrawa) ---

model Post {
  id        String   @id @default(uuid())
  content   String
  imageUrl  String?
  createdAt DateTime @default(now())
  
  // Auteur
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Relations
  comments  Comment[]
  likes     Like[]
}

model Comment {
  id        String   @id @default(uuid())
  content   String
  createdAt DateTime @default(now())

  postId    String
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)

  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // --- NOUVEAU : SYSTÈME DE RÉPONSE ---
  parentId  String?  // ID du commentaire parent (optionnel)
  parent    Comment? @relation("CommentReplies", fields: [parentId], references: [id]) // Le parent
  replies   Comment[] @relation("CommentReplies") // Les réponses
}

model Like {
  id     String @id @default(uuid())
  
  postId String
  post   Post   @relation(fields: [postId], references: [id], onDelete: Cascade)

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Un utilisateur ne peut liker qu'une seule fois un post
  @@unique([postId, userId])
}

model DangerZone {
  id          String @id @default(uuid())
  lat         Float
  lng         Float
  radius      Int    @default(500)
  description String?
  severity    Int    @default(3)
}